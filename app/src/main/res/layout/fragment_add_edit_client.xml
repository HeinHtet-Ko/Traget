<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.addedit.AddEditClientFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/fr_addEdit_edTLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/fr_addEdit_name_edT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <TimePicker


            android:id="@+id/fr_addEdit_tp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_addEdit_edTLayout" />

        <com.google.android.material.chip.ChipGroup

            android:id="@+id/fr_addEdit_chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedChip="@id/fr_addEdit_rv_chip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fr_addEdit_tp"
            app:selectionRequired="true"
            app:singleSelection="true"

            >

            <com.google.android.material.chip.Chip

                android:id="@+id/fr_addEdit_rv_chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotavator"
                app:checkedIcon="@drawable/ic_add"
                app:checkedIconEnabled="true"
                app:checkedIconTint="@color/fabColor" />

            <com.google.android.material.chip.Chip
                android:id="@+id/fr_addEdit_hr_chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harrow"
                app:checkedIcon="@drawable/ic_add"
                app:checkedIconEnabled="true"
                app:checkedIconTint="@color/fabColor"
                app:rippleColor="@color/fabColor" />
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.checkbox.MaterialCheckBox

            android:labelFor="@id/fr_addEdit_dieselLayout"
            android:text="Edit Diesel No."
            android:checked="true"
            app:layout_constraintTop_toTopOf="@id/fr_addEdit_dieselLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fr_addEdit_diesel_cb"
            android:layout_marginStart="15dp"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/fr_addEdit_dieselLayout"
            app:layout_constraintStart_toStartOf="parent"

            />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/fr_addEdit_dieselLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_list"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/fr_addEdit_diesel_cb"
            app:layout_constraintTop_toBottomOf="@id/fr_addEdit_chipGroup">



            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/fr_addEdit_dieselNo_edT"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add A Note"
            android:checked="true"
            android:id="@+id/fr_addEdit_note_cb"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fr_addEdit_noteLayout"
            app:layout_constraintTop_toTopOf="@id/fr_addEdit_noteLayout"
            app:layout_constraintBottom_toBottomOf="@id/fr_addEdit_noteLayout"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/fr_addEdit_noteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/fr_addEdit_note_cb"
            app:layout_constraintTop_toBottomOf="@id/fr_addEdit_dieselLayout"
            app:startIconDrawable="@drawable/ic_note">

            <com.google.android.material.textfield.TextInputEditText
                android:enabled="false"
                android:id="@+id/fr_addEdit_note_edtext"
                android:layout_width="200dp"
                android:minLines="4"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/fr_addEdit_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fr_addEdit_noteLayout" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/fr_addEdit_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:layout_constraintTop_toTopOf="@id/fr_addEdit_confirm_btn"
            app:layout_constraintEnd_toStartOf="@id/fr_addEdit_confirm_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fr_addEdit_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            app:backgroundTint="@color/fabColor"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/fr_addEdit_date_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fr_addEdit_cancel_btn"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>