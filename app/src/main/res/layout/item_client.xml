<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="5dp"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:ignore="RtlSymmetry">


    <TextView
        style="@style/clientitemtextstyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_client_no_tv"/>

    <TextView


        android:id="@+id/item_client_name_tv"
        style="@style/clientitemtextstyle"
        android:layout_width="127dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/item_client_no_tv"
        android:ellipsize="end"
        android:maxLines="1"
        app:drawableTint="#DD2C00" />
    <TextView

        style="@style/clientitemtextstyle"
        android:layout_toEndOf="@id/item_client_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:id="@+id/item_client_mac_tv"
        />

    <TextView

        style="@style/clientitemtextstyle"
        android:layout_toEndOf="@id/item_client_mac_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:id="@+id/item_client_time_tv"
       />

    <TextView

        android:id="@+id/item_client_amt_tv"
        style="@style/clientitemtextstyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fabColor"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>