<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Traget" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#032541</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="pieHoleColor">#434141</item>
        <item name="barChartLabelColor">#BFC9D5</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="labeltextstyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#BFC9D5</item>
        <item name="android:typeface">normal</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/bf</item>
    </style>

    <style name="settingtext" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/iconTint</item>
        <item name="fontStyle">normal</item>
        <item name="android:drawableStart">@drawable/ic_setting_arrow</item>
        <item name="fontFamily">@font/bf</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="settingvaluetext" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/iconTint</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">20dp</item>


    </style>


</resources>