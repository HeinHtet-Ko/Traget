<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor">@color/darkblue</item>
    </style>

    <style name="Theme.Traget" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#032541</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="pieHoleColor">@color/white</item>
        <item name="barChartLabelColor">#2B3439</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="labeltextstyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">#2A3B4E</item>
        <item name="android:typeface">normal</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/bf</item>
    </style>
    <style name="clientitemtextstyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">#2A3B4E</item>
        <item name="android:typeface">normal</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/bf</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="addFABstyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginBottom">75dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="fabCustomSize">50dp</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="backgroundTint">@color/fabColor</item>
    </style>

</resources>